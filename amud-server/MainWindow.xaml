<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:amud_server" x:Class="amud_server.MainWindow"
        Title="A Mud Server" Height="375.373" Width="661" SizeToContent="WidthAndHeight">
    <Grid Margin="0,0,10,10">
        <Grid HorizontalAlignment="Left" Margin="175,141,0,0" VerticalAlignment="Top"/>
            <GroupBox Header="Status" Margin="10,10,233,25" Width="400">
                <TextBox x:Name="textStatus" TextWrapping="Wrap" Margin="10,10,10,10"/>
            </GroupBox>
            <GroupBox Header="Control" Margin="0,10,31,0" Height="89" VerticalAlignment="Top" HorizontalAlignment="Right" Width="150">
                <StackPanel HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="138" Margin="0,0,0,-3">
                    <Button x:Name="buttonStart" Content="Start Server" Click="buttonStart_Click"/>
                    <Button x:Name="buttonStop" Content="Stop Server" Click="buttonStop_Click"/>
                    <Button x:Name="buttonExit" Content="Exit" Click="buttonExit_Click"/>
                </StackPanel>
        </GroupBox>

    </Grid>
</Window>
