<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:amud_server" x:Class="amud_server.MainWindow"
        Title="A Mud Server" WindowStartupLocation="CenterScreen" Height="358" Width="704" SizeToContent="Width">
    <Grid Margin="0,0,10,8">
        <Grid HorizontalAlignment="Left" Margin="175,141,0,0" VerticalAlignment="Top"/>
        <Grid HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="666">
            <GroupBox Header="Control" Margin="0,63,33,0" Height="89" VerticalAlignment="Top" HorizontalAlignment="Right" Width="150">
                <StackPanel HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="138" Margin="0,0,0,-3">
                    <Button x:Name="buttonStart" Content="Start Server" Click="buttonStart_Click"/>
                    <Button x:Name="buttonStop" Content="Stop Server" Click="buttonStop_Click"/>
                    <Button x:Name="buttonExit" Content="Exit" Click="buttonExit_Click"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Status" Margin="31,32,235,29" Width="400">

                <TextBox x:Name="textStatus" TextWrapping="Wrap" Margin="10,10,10,10" ScrollViewer.VerticalScrollBarVisibility="Auto" />
            </GroupBox>
        </Grid>

    </Grid>
</Window>
