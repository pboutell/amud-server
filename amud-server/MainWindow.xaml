<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:amud_server" x:Class="amud_server.MainWindow"
        Title="A Mud Server" Height="433" Width="758">
    <Grid Margin="0,0,0,0">
        <GroupBox Header="Status" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top" Height="336" Width="528">
            <TextBox x:Name="textStatus" HorizontalAlignment="Center" Height="292" TextWrapping="Wrap" VerticalAlignment="Center" Width="498" Margin="10,10,8,12"/>
        </GroupBox>
        <GroupBox Header="Control" HorizontalAlignment="Left" Margin="588,49,0,0" VerticalAlignment="Top" Height="89" Width="150">
            <StackPanel HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="138" Margin="0,0,0,-3">
                <Button x:Name="buttonStart" Content="Start Server" Click="buttonStart_Click"/>
                <Button x:Name="buttonStop" Content="Stop Server" Click="buttonStop_Click"/>
                <Button x:Name="buttonExit" Content="Exit" Click="buttonExit_Click"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>
